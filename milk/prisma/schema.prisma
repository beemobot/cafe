generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RaidUser {
  raid        Raid?    @relation(fields: [raid_id], references: [id])
  raid_id     String   @db.Uuid
  id          BigInt
  name        String
  avatar_hash String?
  created_at  DateTime @db.Timestamptz
  joined_at   DateTime @db.Timestamptz

  @@id([raid_id, id])
}

model Raid {
  id           String     @unique @db.Uuid
  public_id    String     @unique
  guild_id     BigInt
  concluded_at DateTime?  @db.Timestamptz
  users        RaidUser[]
}
