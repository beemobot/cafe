generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RaidUser {
  raid        Raid?    @relation(fields: [raid_id], references: [id])
  raid_id     String
  id          BigInt
  name        String
  avatar_hash String?
  created_at  DateTime @db.Timestamptz
  joined_at   DateTime @db.Timestamptz

  @@id([raid_id, id])
  @@index([joined_at])
}

model Raid {
  id           String     @unique
  public_id    String     @unique
  guild_id     BigInt
  created_at   DateTime   @default(now()) @db.Timestamptz()
  concluded_at DateTime?  @db.Timestamptz
  users        RaidUser[]
}
